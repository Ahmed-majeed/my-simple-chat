<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        tools:context=".activities.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="155dp"
            android:layout_height="129dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/settingsProfileID"
            android:src="@drawable/profile_boy"/>
    <TextView
            android:text="Display Name"
            android:layout_width="158dp"
            android:layout_height="39dp"
            android:id="@+id/settingsDisplayName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/settingsProfileID"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    <TextView
            android:text="Hey ... Iam Happy"
            android:layout_width="316dp"
            android:layout_height="46dp"
            android:id="@+id/settingsStatusText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/settingsDisplayName"
            android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
            android:textColor="#ffffff"/>
    <Button
            android:text="@string/change_pic"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@drawable/bt_shape"
            android:layout_width="248dp"
            android:layout_height="58dp"
            android:id="@+id/settingsChangeImgBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/settingsStatusText"
            android:textStyle="bold" android:textSize="14sp" android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/change_status"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@drawable/bt_shape"
            android:layout_width="248dp"
            android:layout_height="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/settingsChangeImgBtn"
            android:textStyle="bold" android:textColor="#FFFFFF" android:id="@+id/settingsChangeStatus"/>

</androidx.constraintlayout.widget.ConstraintLayout>